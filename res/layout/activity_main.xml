<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/background"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				tools:context=".MainActivity" >

	<GridLayout
			android:id="@+id/gridLayout1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:columnCount="4"
			android:padding="65dp"
			android:rowCount="6" >

		<!-- ########### buttons: number 0 ... 9 ########### -->

		<Button
				android:id="@+id/btn_1"
				style="@style/button_normal_round"
				android:layout_row="1"
				android:layout_column="0"
				android:text="@string/btn_1"
				/>

		<Button
				android:id="@+id/btn_2"
				style="@style/button_normal_round"
				android:layout_row="1"
				android:layout_column="1"
				android:text="@string/btn_2"
				/>

		<Button
				android:id="@+id/btn_3"
				style="@style/button_normal_round"
				android:layout_row="1"
				android:layout_column="2"
				android:text="@string/btn_3"
				/>

		<Button
				android:id="@+id/btn_4"
				style="@style/button_normal_round"
				android:layout_row="2"
				android:layout_column="0"
				android:text="@string/btn_4"
				/>

		<Button
				android:id="@+id/btn_5"
				style="@style/button_normal_round"
				android:layout_row="2"
				android:layout_column="1"
				android:text="@string/btn_5"
				/>

		<Button
				android:id="@+id/btn_6"
				style="@style/button_normal_round"
				android:layout_row="2"
				android:layout_column="2"
				android:text="@string/btn_6"
				/>

		<Button
				android:id="@+id/btn_7"
				style="@style/button_normal_round"
				android:layout_row="3"
				android:layout_column="0"
				android:text="@string/btn_7"
				/>

		<Button
				android:id="@+id/btn_8"
				style="@style/button_normal_round"
				android:layout_row="3"
				android:layout_column="1"
				android:text="@string/btn_8"
				/>

		<Button
				android:id="@+id/btn_9"
				style="@style/button_normal_round"
				android:layout_row="3"
				android:layout_column="2"
				android:text="@string/btn_9"
				/>

		<Button
				android:id="@+id/btn_0"
				style="@style/button_normal_round"
				android:layout_row="4"
				android:layout_column="0"
				android:text="@string/btn_0"
				/>

		<!-- ########### buttons: [+] [-] [*] [/] ########### -->

		<Button
				android:id="@+id/btn_plus"
				style="@style/button_normal_round.blue"
				android:layout_row="1"
				android:layout_column="3"
				android:text="@string/btn_plus"
				/>

		<Button
				android:id="@+id/btn_minus"
				style="@style/button_normal_round.blue"
				android:layout_row="2"
				android:layout_column="3"
				android:text="@string/btn_minus"
				/>

		<Button
				android:id="@+id/btn_multiply"
				style="@style/button_normal_round.blue"
				android:layout_row="3"
				android:layout_column="3"
				android:text="@string/btn_multiply"
				/>

		<Button
				android:id="@+id/btn_divide"
				style="@style/button_normal_round.blue"
				android:layout_row="4"
				android:layout_column="3"
				android:text="@string/btn_divide"
				/>

		<!-- ########### buttons: [,] [Clear] [=] [ch_or_disp] ########### -->

		<Button
				android:id="@+id/btn_dot"
				style="@style/button_normal_round"
				android:layout_row="4"
				android:layout_column="1"
				android:text="@string/btn_dot"
				/>


		<Button
				android:id="@+id/btn_clear"
				style="@style/button_normal_round.orange.width2X"
				android:layout_row="5"
				android:layout_column="0"
				android:text="@string/btn_clear"
				/>

		<Button
				android:id="@+id/btn_equals"
				style="@style/button_normal_round.green.width2X"
				android:layout_row="5"
				android:layout_column="2"
				android:text="@string/btn_equals"
				/>


		<Button
				android:id="@+id/btn_changeOrientation"
				style="@style/button_normal_round"
				android:layout_row="4"
				android:layout_column="2"
				android:text="@string/btn_changeOrientation"
				android:onClick="buttonChangeDispOrient"
				/>

		<!-- ########### display ########### -->

		<EditText
				android:id="@+id/display"
				style="@style/display"
				android:layout_row="0"
				android:layout_column="0"
				android:layout_columnSpan="4"
				>

			<requestFocus />
		</EditText>

	</GridLayout>

</RelativeLayout>