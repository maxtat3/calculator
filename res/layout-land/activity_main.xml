<!-- Комментарий -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:background="@drawable/background"
				tools:context=".MainActivity" >

	<EditText
			android:id="@+id/display"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginEnd="30dp"
			android:layout_marginStart="30dp"
			android:layout_marginTop="55dp"
			android:background="@drawable/button_press"
			android:ems="10"
			android:textColor="@color/green"
			android:textSize="36sp"
			android:textStyle="bold" />

	<Button
			android:id="@+id/btn_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/btn_1"
			android:layout_marginLeft="44dp"
			android:layout_toRightOf="@+id/btn_1"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_2"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_2"
			android:layout_alignBottom="@+id/btn_2"
			android:layout_marginLeft="51dp"
			android:layout_toRightOf="@+id/btn_2"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_3"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_clear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_0"
			android:layout_alignBottom="@+id/btn_0"
			android:layout_centerHorizontal="true"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_clear"
			android:textColor="@color/orange"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_3"
			android:layout_alignBottom="@+id/btn_3"
			android:layout_toLeftOf="@+id/btn_clear"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_4"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_4"
			android:layout_alignBottom="@+id/btn_4"
			android:layout_alignLeft="@+id/btn_clear"
			android:layout_marginLeft="42dp"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_5"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_7"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/btn_2"
			android:layout_marginTop="36dp"
			android:layout_toLeftOf="@+id/btn_3"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_7"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_divide"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_clear"
			android:layout_alignBottom="@+id/btn_clear"
			android:layout_marginLeft="78dp"
			android:layout_toRightOf="@+id/btn_5"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_divide"
			android:textColor="@color/blue"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/display"
			android:layout_below="@+id/display"
			android:layout_marginTop="31dp"
			android:background="@drawable/btn_round_sel"
			android:fontFamily="Arial"
			android:onClick="buttonClicked"
			android:text="@string/btn_1"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_7"
			android:layout_alignBottom="@+id/btn_7"
			android:layout_alignLeft="@+id/btn_1"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_6"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_8"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_7"
			android:layout_alignBottom="@+id/btn_7"
			android:layout_alignLeft="@+id/btn_3"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_8"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_9"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_8"
			android:layout_alignBottom="@+id/btn_8"
			android:layout_alignLeft="@+id/btn_4"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_9"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="15dp"
			android:layout_marginRight="18dp"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_0"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_multiply"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/btn_7"
			android:layout_alignLeft="@+id/btn_minus"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_multiply"
			android:textColor="@color/blue"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_equals"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_9"
			android:layout_alignBottom="@+id/btn_9"
			android:layout_alignLeft="@+id/btn_divide"
			android:layout_marginLeft="38dp"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_equals"
			android:textColor="@color/green"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_minus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_equals"
			android:layout_alignBottom="@+id/btn_equals"
			android:layout_toLeftOf="@+id/btn_0"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_minus"
			android:textColor="@color/blue"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_plus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_multiply"
			android:layout_alignBottom="@+id/btn_multiply"
			android:layout_alignLeft="@+id/btn_equals"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_plus"
			android:textColor="@color/blue"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_dot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/btn_clear"
			android:layout_toLeftOf="@+id/btn_2"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonClicked"
			android:text="@string/btn_dot"
			android:textSize="36sp" />

	<Button
			android:id="@+id/btn_changeOrientation"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/btn_dot"
			android:layout_alignBottom="@+id/btn_dot"
			android:layout_alignRight="@+id/btn_8"
			android:background="@drawable/btn_round_sel"
			android:onClick="buttonChangeDispOrient"
			android:text="@string/btn_changeOrientation"
			android:textSize="18sp" />

</RelativeLayout>
