<!-- Комментарий -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/background"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				tools:context=".MainActivity" >

	<GridLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:columnCount="6"
			android:paddingLeft="130dp"
			android:rowCount="4" >

		<Button
				android:id="@+id/btn_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_gravity="left"
				android:layout_row="1"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_1"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_gravity="left"
				android:layout_row="1"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_2"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_gravity="left"
				android:layout_row="1"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_3"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_gravity="left"
				android:layout_row="2"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_4"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_gravity="left"
				android:layout_row="2"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_5"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_gravity="left"
				android:layout_row="2"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_6"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_gravity="left"
				android:layout_row="3"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_7"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_gravity="left"
				android:layout_row="3"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_8"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_gravity="left"
				android:layout_row="3"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_9"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="3"
				android:layout_gravity="left"
				android:layout_row="3"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_0"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_plus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="3"
				android:layout_gravity="left"
				android:layout_row="1"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_plus"
				android:textColor="@color/blue"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_minus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="4"
				android:layout_gravity="left"
				android:layout_row="1"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_minus"
				android:textColor="@color/blue"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_multiply"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="3"
				android:layout_gravity="left"
				android:layout_row="2"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_multiply"
				android:textColor="@color/blue"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_divide"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="4"
				android:layout_gravity="left"
				android:layout_row="2"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_divide"
				android:textColor="@color/blue"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_dot"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="4"
				android:layout_gravity="left"
				android:layout_row="3"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_dot"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_clear"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="5"
				android:layout_gravity="left"
				android:layout_row="1"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_clear"
				android:textColor="@color/orange"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_equals"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="5"
				android:layout_gravity="left"
				android:layout_row="3"
				android:background="@drawable/btn_sel"
				android:fontFamily="Arial"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonClicked"
				android:text="@string/btn_equals"
				android:textColor="@color/green"
				android:textSize="36sp" />

		<Button
				android:id="@+id/btn_changeOrientation"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="5"
				android:layout_gravity="center"
				android:layout_row="2"
				android:background="@drawable/btn_sel"
				android:minHeight="110dp"
				android:minWidth="110dp"
				android:onClick="buttonChangeDispOrient"
				android:text="@string/btn_changeOrientation"
				android:textColor="@color/white"
				android:textSize="36sp" />

		<EditText
				android:id="@+id/display"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_columnSpan="6"
				android:layout_gravity="fill_horizontal"
				android:layout_marginEnd="30dp"
				android:layout_marginStart="30dp"
				android:layout_marginTop="35dp"
				android:layout_row="0"
				android:background="@drawable/button_press"
				android:ems="10"
				android:focusable="false"
				android:gravity="center_vertical|center_horizontal"
				android:textAlignment="center"
				android:textColor="@color/green_bright"
				android:textSize="36sp"
				android:textStyle="bold" >

			<requestFocus />
		</EditText>

	</GridLayout>

</RelativeLayout>